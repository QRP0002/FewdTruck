<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentTop="true"
        android:background="@color/navigationBarColor"
        android:id="@+id/view1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cart_prod_name"
            android:textColor="@color/textColorPrimary"
            android:layout_alignParentLeft="true"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorPrimary"
            android:layout_alignParentRight="true"
            android:id="@+id/cart_truck_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorPrimary"
            android:id="@+id/cart_prod_price"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/cart_prod_name"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_delete"
            android:id="@+id/cart_remove_button"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/cart_truck_name"
            android:text="@string/cart_remove_button"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_below="@+id/item2"
        android:layout_alignParentBottom="true"
        android:layout_height="2dp"
        android:background="@color/navigationBarColor"
        android:id="@+id/view2"/>
</LinearLayout>