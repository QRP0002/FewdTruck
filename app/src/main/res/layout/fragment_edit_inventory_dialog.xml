<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="@drawable/dialog_shape"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorPrimary"
        android:textSize="20sp"
        android:textAlignment="center"
        android:gravity="center"
        android:text="@string/edit_inv_header"
        android:layout_gravity="center_horizontal" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/edit_inv_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_inv_name_et"
        android:hint="@string/edit_inv_hint1"
        android:singleLine="true"
        android:gravity="center"
        android:textAlignment="center"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/edit_inv_price_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_inv_hint2"
        android:id="@+id/edit_inv_price_et"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:gravity="center"
        android:textAlignment="center" />

    </android.support.design.widget.TextInputLayout>

    <View
        android:layout_width="270dp"
        android:layout_height="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:background="@drawable/button_shape"
            android:text="@string/edit_inv_cancel_button"
            android:id="@+id/edit_inv_cancel_button"/>

        <View
            android:layout_width="8dp"
            android:layout_height="1dp"/>

        <Button
            android:layout_width="wrap_content"
            android:textColor="@color/colorAccent"
            android:background="@drawable/button_shape"
            android:layout_height="wrap_content"
            android:text="@string/edit_inv_edit_button"
            android:id="@+id/edit_inv_edit_button"/>

        <View
            android:layout_width="8dp"
            android:layout_height="1dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:textColor="@color/colorAccent"
            android:text="@string/edit_inv_delete_button"
            android:id="@+id/edit_inv_delete_button"/>


    </LinearLayout>
</LinearLayout>