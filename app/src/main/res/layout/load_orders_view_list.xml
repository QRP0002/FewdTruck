<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin">

    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:id="@+id/order_top"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/order_prod_name"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/order_top"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_prod_name"
        android:id="@+id/order_customer_name"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/order_date"
        android:textSize="16sp"
        android:layout_alignTop="@+id/orders_remove_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orders_cooked_button"
        android:text="@string/orders_cooked_button"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orders_remove_button"
        android:text="@string/orderes_remove_button"
        android:layout_gravity="right"
        android:layout_below="@+id/orders_cooked_button"
        android:layout_alignLeft="@+id/orders_cooked_button"
        android:layout_alignStart="@+id/orders_cooked_button" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:id="@+id/order_bottom"
        android:layout_below="@+id/orders_remove_button"/>

</RelativeLayout>
</LinearLayout>